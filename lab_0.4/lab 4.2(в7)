#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "UKR");
    int age;

    cout << "Введiть свiй вiк: ";
    cin >> age;

    if (age >= 18) {
        cout << "У вас є право голосу." << endl;
    }
    else {
        int years_until_voting = 18 - age;
        cout << "Вам потрiбно почекати ще " << years_until_voting << " рокiв, щоб мати право голосу." << endl;
    }

    return 0;
}

#include <iostream>

// Функцiя для обчислення кiнетичної енергiї
double kineticEnergy(double m, double v) {
    return 0.5 * m * v * v;
}

// Функцiя для обчислення потенцiальної енергiї
double potentialEnergy(double m, double g, double h) {
    return m * g * h;
}

int main() {
    setlocale(LC_ALL, "UKR");
    double m, v, h;
    const double g = 9.81; // прискорення вiльного падiння

    std::cout << "Введiть масу тiла (кг): ";
    std::cin >> m;

    std::cout << "Введiть швидкiсть тiла (м/с): ";
    std::cin >> v;

    std::cout << "Введiть висоту тiла (м): ";
    std::cin >> h;

    std::cout << "Кiнетична енергiя: " << kineticEnergy(m, v) << " Дж\n";
    std::cout << "Потенцiальна енергiя: " << potentialEnergy(m, g, h) << " Дж\n";

    return 0;
}
